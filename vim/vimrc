function! s:show_documentation()
  if (index(['vim','help'], &filetype) >= 0)
    let word = expand('<cword>')
    if match(getline('.'), word . '(') != -1
      execute 'h ' . word . '()'
    elseif match(getline('.'), 'set ' . word) != -1 ||
          \ match(getline('.'), "'" . word . "'") != -1
      execute 'h ' . "'" . word . "'"
    else
      execute 'h ' . word
    endif
  else
    call CocActionAsync('doHover')
  endif
endfunction

