  "clangd.arguments": [
    "--all-scopes-completion",
    "--background-index",
    "--clang-tidy",
    // "--compile-commands-dir=build",
    "--completion-style=detailed",
    "--cross-file-rename",
    "--header-insertion=never",
    // "--header-insertion=iwyu",
    // "--header-insertion-decorators",
    "--hidden-features",
    "-j=12",
    "--ranking-model=decision_forest"
  ],
  "clangd.compilationDatabasePath": "build",
  "clangd.enabled": true,
  // "clangd.semanticHighlighting": true,
  "coc.preferences.colorSupport": true,
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.rootPatterns": [
    "build",
    ".git"
  ],
  "coc.preferences.semanticTokensHighlights": false,
  "coc.source.around.priority": 95,
  "coc.source.buffer.priority": 95,
  "coc.source.file.priority": 98,
  "coc.source.ultisnips.priority": 100,
  // "diagnostic.enable": false,
  "diagnostic.autoRefresh": true,
  "diagnostic.refreshOnInsertMode": true,
  "diagnostic.separateRelatedInformationAsDiagnostics": true,
  "explorer.file.reveal.auto": false,
  "explorer.icon.enableNerdfont": true,
  // "list.insertMappings": {
  // "<C-n>": "normal:j",
  // "<C-p>": "normal:k"
  // },
  "markdownlint.config": {
    "default": true,
    "MD007": {
      "indent": 4
    },
    "line-length": false
  },
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--max-line-length=88",
    "--extend-ignore=E203"
  ],
  "signature.preferShownAbove": false,
  // "snippets.extends": {
  // "bash": ["sh", "zsh"],
  // "c": ["cpp", "h", "hpp"],
  // "cpp": ["c", "h", "hpp"],
