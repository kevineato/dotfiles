  // "UltiSnips",
  // "~/.vim/CustomSnips"
  // ],
  // "snippets.userSnippetsDirectory": "~/.vim/CustomSnips",
  "suggest.defaultSortMethod": "none",
  // "tabnine.priority": 89,
  "vimlsp.suggest.fromRuntimepath": true,
  "xml.java.home": "/usr",
  "xml.validation.noGrammar": "ignore"
  // "yank.priority": 89
